<?xml version="1.0" encoding="UTF-8"?>

<data>
    <record id="view_donaciones_form" model="ir.ui.view" >
      <field name="name">donaciones form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="mode">primary</field>
      <field name="arch" type="xml">

        <xpath expr="//sheet/div/field[@name='company_type']" position="replace">
         <field name="tipo_donacion" widget="radio" options="{'horizontal': true}"/>
         <t t-set="tipo_donacion" t-value="tipo_donacion" />
        </xpath>
 

    

        <xpath expr="//sheet/div/h1/field[@id='individual']" position="replace">
         <field name="nombre_donante" placeholder='Nombre'/>
        </xpath>
        <xpath expr="//sheet/div/div[@class='o_row']" position="before">
         <field name="apellido_donante" placeholder='Apellido'/>
        </xpath>
        <xpath expr="//sheet/notebook/page[@name='internal_notes']" position="after">
          <page name="devs" string="Donaciones">
            <group>
              <group>
             <a class="btn btn-primary" href="#" role="button">Donar</a>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>
 





