    <record model="ir.actions.act_window" id="view_tree_donaciones">
        <field name="name">Donaciones</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field> 
        
    </record>

      <record model="ir.actions.act_window.view" id="view_tree">
      <field name="sequence" eval="1"></field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="base.view_partner_tree"></field>
      <field name="act_window_id" ref="view_tree_donaciones"></field>
    </record>
    
    <record model="ir.actions.act_window.view" id="view_form">
      <field name="sequence" eval="2"></field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_donaciones_form"></field>
      <field name="act_window_id" ref="view_tree_donaciones"></field>
    </record>

    <menuitem id="donaciones_menu" name="Donanciones" web_icon="stock,static/description/icon.png" sequence="10"/> 
    <menuitem id="submenu_donaciones_menu" name="Donaciones" sequence="10" parent="donaciones_menu"/> 
    <menuitem id="submenu_donaciones_action" name="Donaciones" sequence="10" parent="submenu_donaciones_menu" action="view_tree_donaciones"/>

      

 </data>



